\newcommand{\resumeItem}[2]{
  \item\small{
    \textbf{#1}{: #2 \vspace{-2pt}}
  }
}

\newcommand{\publicationItem}[4]{
  \item\setlength\itemsep{0.2em}\small{
    {#1}\textbf{ #2.}\textit{ #3}{ (#4)}
  }
}

\newcommand{\dottedItem}[2]{
  \item\setlength\itemsep{0.1em}\small{
      \textbf{#1}{ \dotfill }{ #2}\vspace{-4pt}
  }
}

